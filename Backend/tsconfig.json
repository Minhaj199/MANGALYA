{
  "compilerOptions": {
    "target": "es6",                    // Set the JavaScript version to compile to
    "module": "commonjs",                // Use CommonJS for module system
    "outDir": "./dist",                  // Output directory for compiled files
    "rootDir": "./src",                  // Specify the root directory of input files
    "strict": true,                      // Enable strict type-checking options
    "esModuleInterop": true              // Enable interoperability between CommonJS and ES modules
  },
  "include": ["src/**/*.ts"],            // Include all TypeScript files in the src folder
  "exclude": ["node_modules", "dist"]    // Exclude node_modules and dist directories
}
